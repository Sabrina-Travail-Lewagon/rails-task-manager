<h1>Liste des tâches</h1>
  <% @tasks.each do |task| %>
<ul class="list-group">
  <li class="list-group-item">
    <input type="checkbox" <%= task.completed ? 'checked' : '' %>> <%= link_to task.title, task_path(task[:id]) %>
    <%= link_to task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Etes vous sure ?", :method=>'delete'} do %>
    <i class="fa-solid fa-trash-can"></i>
<% end %>
</ul>
  <% end %>
<hr>
<%= link_to new_task_path do %>
  <i class="fa-solid fa-plus"></i> Ajouter une tâche
<% end %>
