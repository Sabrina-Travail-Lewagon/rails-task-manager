	 <%= form_with model: @task, class: "form" do |f| %>
    <div class="card">
      <div class="card-body">

        <div class="mb-3">
          <%= f.label :title, { class: "col-sm-2 col-form-label"} %>
          <%= f.text_field :title, {class: "form-control"} %>
        </div>
        <div class="mb-3">
          <%= f.label :details, class: "col-sm-2 col-form-label" %>
          <%= f.text_field :details, {class: "form-control"} %>
        </div>

        <div class="mb-3">
          <%= f.label :completed, class: "form-check-label" %>
          <%= f.check_box :completed, class: "form-check-input" %>
        </div>
          <%= f.submit "Submit", {class: "btn btn-primary"} %>
      </div>
    </div>
  <% end %>
